<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.PhysicsWallah" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
    </style>

    <!-- Text themes. -->
    <style name="Text_Normal_10" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="Text_Normal_12" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_Title" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <!-- Button themes. -->
    <style name="Button_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height_large</item>
        <item name="android:background">@drawable/button_rounded_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

</resources>